@model MFAdminASPNET.Models.Media

@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label"><span class="required">*</span>媒体名字：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.MediaName, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.MediaName)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">是否激活：</label>
                <div class="controls">
                    @Html.CheckBoxFor(m => m.IsActive)
                </div>
            </div>


        </div>
    </div>
}